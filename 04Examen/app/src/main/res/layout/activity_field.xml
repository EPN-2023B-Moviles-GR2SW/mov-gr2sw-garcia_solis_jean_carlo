<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#052E5E"
    tools:context=".vistas.MainActivity">

    <Button
        android:id="@+id/btn_anadir_well"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A60000"
        android:text="AÃ±adir Well"
        android:textColor="@android:color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lvl_list_view_field"
        app:layout_constraintStart_toStartOf="@+id/lvl_list_view_field"
        app:layout_constraintTop_toBottomOf="@+id/lvl_list_view_field"
        app:layout_constraintVertical_bias="0.365" />

    <ListView
        android:id="@+id/lvl_list_view_field"
        android:layout_width="410dp"
        android:layout_height="511dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="105dp"
        android:layout_height="32dp"
        android:text="WELLS"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/tv_nombre_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_nombre"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toTopOf="@+id/lvl_list_view_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>